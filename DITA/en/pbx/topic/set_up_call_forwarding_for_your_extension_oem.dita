<task id="task_lgw_pfb_5cb">
    <title>Set up Call Forwarding for Your Extension</title>
    <shortdesc>Log in the Extension User Portal to change the call forwarding settings for your
        extension.</shortdesc>
    <prolog>
        <critdates>
            <!--Carol-->
